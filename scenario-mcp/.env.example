# Scenario API Configuration
SCENARIO_API_KEY=your_api_key_here
SCENARIO_API_SECRET=your_api_secret_here
SCENARIO_API_BASE_URL=https://api.cloud.scenario.com/v1

# Server Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting & Performance
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30.0
MAX_RETRIES=3
RETRY_DELAY=1.0

# Asset Management
DEFAULT_DOWNLOAD_PATH=./scenario_assets
ORGANIZE_ASSETS_BY=date  # date, model, prompt_hash, custom

# Cost Management
ENABLE_COST_ESTIMATION=true
MAX_CREDITS_PER_BATCH=1000